<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".activities.MainActivity"
        tools:showIn="@layout/app_bar_main">


        <TextView
            android:id="@+id/tv_title_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/allan"
            android:text="@string/app_name"
            android:textSize="45sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <android.support.v7.widget.CardView
            android:id="@+id/cv_exercices_main"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="@color/colorCardViewMain"
            app:cardCornerRadius="@dimen/cv_corner_radius_main"
            app:cardElevation="@dimen/cv_elevation_main"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_main">

            <LinearLayout
                android:id="@+id/ll_exercices_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="@dimen/ll_cv_margin_main"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_exercices_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_tabs_exercices" />

                <TextView
                    android:id="@+id/tv_exercices_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/tv_exercices_main"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/tv_cv_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_performance_main"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginBottom="@dimen/cv_margin_main"
            android:layout_marginEnd="18dp"
            android:layout_marginLeft="@dimen/cv_margin_main"
            android:layout_marginRight="@dimen/cv_margin_main"
            android:layout_marginStart="18dp"
            android:layout_marginTop="30dp"
            android:layout_rowWeight="1"
            app:cardBackgroundColor="@color/colorCardViewMain"
            app:cardCornerRadius="@dimen/cv_corner_radius_main"
            app:cardElevation="@dimen/cv_elevation_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_main">


            <LinearLayout
                android:id="@+id/ll_performance_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="@dimen/ll_cv_margin_main"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_performance_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_tabs_performance" />

                <TextView
                    android:id="@+id/tv_performance_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/tv_performance_main"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/tv_cv_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_settings_main"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginBottom="@dimen/cv_margin_main"
            android:layout_marginEnd="18dp"
            android:layout_marginLeft="@dimen/cv_margin_main"
            android:layout_marginRight="@dimen/cv_margin_main"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:layout_rowWeight="1"
            app:cardBackgroundColor="@color/colorCardViewMain"
            app:cardCornerRadius="@dimen/cv_corner_radius_main"
            app:cardElevation="@dimen/cv_elevation_main"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_exercices_main">


            <LinearLayout
                android:id="@+id/ll_settings_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="@dimen/ll_cv_margin_main"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_settings_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_tabs_settings" />

                <TextView
                    android:id="@+id/tv_settings_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/tv_settings_main"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/tv_cv_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_add_main"

            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginBottom="@dimen/cv_margin_main"
            android:layout_marginEnd="18dp"
            android:layout_marginLeft="@dimen/cv_margin_main"
            android:layout_marginRight="@dimen/cv_margin_main"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:layout_rowWeight="1"
            app:cardBackgroundColor="@color/colorCardViewMain"
            app:cardCornerRadius="@dimen/cv_corner_radius_main"
            app:cardElevation="@dimen/cv_elevation_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/cv_performance_main">

            <LinearLayout
                android:id="@+id/ll_add_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="@dimen/ll_cv_margin_main"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_add_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_tabs_add" />

                <TextView
                    android:id="@+id/tv_add_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/tv_add_main"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/tv_cv_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_profile_main"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginBottom="@dimen/cv_margin_main"
            android:layout_marginEnd="18dp"
            android:layout_marginLeft="@dimen/cv_margin_main"
            android:layout_marginRight="@dimen/cv_margin_main"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:layout_rowWeight="1"
            app:cardBackgroundColor="@color/colorCardViewMain"
            app:cardCornerRadius="@dimen/cv_corner_radius_main"
            app:cardElevation="@dimen/cv_elevation_main"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_settings_main">


            <LinearLayout
                android:id="@+id/ll_profile_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="@dimen/ll_cv_margin_main"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_profile_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_tabs_profile" />

                <TextView
                    android:id="@+id/tv_profile_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/tv_profile_main"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/tv_cv_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--Column 2-->
        <android.support.v7.widget.CardView
            android:id="@+id/cv_about_main"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginBottom="@dimen/cv_margin_main"
            android:layout_marginEnd="18dp"
            android:layout_marginLeft="@dimen/cv_margin_main"
            android:layout_marginRight="@dimen/cv_margin_main"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/colorCardViewMain"
            app:cardCornerRadius="@dimen/cv_corner_radius_main"
            app:cardElevation="@dimen/cv_elevation_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/cv_add_main">

            <LinearLayout
                android:id="@+id/ll_about_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="@dimen/ll_cv_margin_main"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_about_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_tabs_info" />

                <TextView
                    android:id="@+id/tv_about_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/tv_about_main"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/tv_cv_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>